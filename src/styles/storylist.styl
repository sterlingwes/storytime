.st-main
  background-color #fff

.st-storylist
  position absolute
  top 52px
  left 0
  right 0
  bottom 0
  overflow-y scroll
  
.st-storylist-empty
  padding 30px 20px 0 30px
  
  div
    color hint_base
    display block
    font-size 1.7em

    i
      position relative
      top 1px
    
    b
      font-weight normal
      color hint_emphasis
    
