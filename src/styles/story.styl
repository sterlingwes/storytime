@-webkit-keyframes grow
  0%
    -webkit-transform scale(0.1, 0.1)
    opacity 0
  40%
    -webkit-transform scale(1.5, 1.5)
    opacity 1
  100%
    -webkit-transform scale(1, 1)
    opacity 1

@-webkit-keyframes flickerAnimation
  0%
    opacity 1
  50%
    opacity 0
  100%
    opacity 1

.st-story
  position relative
  padding 10px
  background-color blue_faded
  border-bottom 1px solid #fff
  color #555
    
  &.st-selected
    background-color blue_light
    color blue_emphasis
    
    .st-projectlabel
      color blue_strong
    
    &:after
      position absolute
      top 11px
      right 5px
      content "\e095"
      font-family 'icomoon'
    
  &.st-hidden
    overflow hidden
    padding 0
    line-height 0
    height 0px
    opacity 0
    border 0
    
  .st-projectlabel
    display inline-block
    overflow hidden
    text-overflow ellipsis
    color #777
    text-transform uppercase
    font-size 0.8em
    padding-right 5px
    width 50px
  
  .st-status
    position absolute
    top 8px
    right 17px
    
    i.icon-play
      display inline-block
      -webkit-animation flickerAnimation 1s infinite
      position relative
      font-size 1.4em